<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_et_email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10sp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:textColorHint">@color/color_default</item>

        <item name="android:drawableStart">@drawable/ic_email</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="style_et_simple">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:textColorHint">@color/color_default</item>
    </style>

    <style name="style_et_password">
        <item name="android:inputType">numberPassword</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:textColorHint">@color/color_default</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10sp</item>

        <item name="android:drawableStart">@drawable/ic_password</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="style_text_view_information_fields">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_default</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_progressbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="linear_layout_designer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="style_txt_information_todo_doing_done">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_pb_rv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="style_linearlayout_rv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_rb">
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>